<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/challenge_bg"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/stageNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="01"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/firstStar_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/stageNumber_textView"
        android:src="@drawable/star_yellow"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/secondStar_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/firstStar_imageView"
        android:layout_toRightOf="@+id/firstStar_imageView"
        android:src="@drawable/star_yellow"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/thirdStar_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/secondStar_imageView"
        android:layout_toRightOf="@+id/secondStar_imageView"
        android:src="@drawable/star_white"
        android:layout_marginLeft="5dp"/>
</RelativeLayout>